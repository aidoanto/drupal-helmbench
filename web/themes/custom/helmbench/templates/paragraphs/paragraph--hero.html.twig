{% set width_class = width == 'wide' ? 'content-block width-wide' : 'content-block' %}

<div class="{{ width_class }}">
	{% include '@helmbench/02-molecules/hero/hero.twig' with {
  heading: content.field_heading,
  subtitle: content.field_subtitle,
} %}
</div>
