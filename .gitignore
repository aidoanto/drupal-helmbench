# Drupal Project .gitignore

# Ignore directories generated by Composer
/vendor/

# Ignore Drupal's file directories (user uploads, temp files)
/web/sites/*/files/
/web/sites/*/private/

# Ignore configuration sync directory (optional - some teams commit this)
# /config/sync/

# Ignore local settings files
/web/sites/*/settings.local.php
/web/sites/*/services.local.yml

# Drupal core and contributed projects (managed by Composer)
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/

# Ignore SQLite databases
*.sqlite

# Ignore environment files with secrets
.env
.env.local
.env.*.local

# OS files
.DS_Store
Thumbs.db

# IDE/Editor files
.idea/
*.swp
*.swo
*~
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# Node modules (theme-level)
**/node_modules/

# Theme compiled assets (optional - uncomment to ignore)
# web/themes/custom/*/dist/

# Storybook static builds
**/storybook-static/

# Drush temporary files
drush/sites/*

# PHP/Composer
*.log
*.cache

# Backup files
*.bak
*.orig

# Context file (personal project notes)
# context.md

backups/

# Ignore Lando logs
lando.log